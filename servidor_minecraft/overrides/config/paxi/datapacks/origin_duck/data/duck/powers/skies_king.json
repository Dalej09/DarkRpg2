{
	"type": "origins:multiple",

	"flight": {
		"type": "origins:elytra_flight",
		"render_elytra": true
	},

	"flight_hunger": {
		"type": "origins:exhaust",
		"exhaustion": 0.5,
		"condition": {
			"type": "origins:fall_flying"
		},
		"interval": 100
	},

	"prevent_elytra": {
		"type": "origins:prevent_item_use",
		"item_condition": {
			"type": "origins:ingredient",
			"ingredient": {
				"item": "minecraft:elytra"
			}
		},
		"name": "You already have wings!"
	},

	"prevent_elytra2": {
		"type": "origins:restrict_armor",
		"chest": {
			"type": "origins:ingredient",
			"ingredient": {
				"item": "minecraft:elytra"
			}
		}
	},

	"prevent_fireworks": {
		"type": "origins:prevent_item_use",
		"item_condition": {
			"type": "origins:ingredient",
			"ingredient": {
				"item": "minecraft:firework_rocket"
			}
		},
		"name": "Your wings are enough!"
	},

	"boost": {
		"type": "origins:active_self",
		"entity_action": {
			"type": "origins:and",
			"actions": [
				{
					"type": "origins:execute_command",
					"command": "particle minecraft:cloud ~ ~ ~ 0.5 0 0.5 0.2 20 normal",
					"permission_level": 4
				},
				{
					"type": "origins:add_velocity",
					"z": 1,
					"space": "local"
				},
				{
					"type": "origins:exhaust",
					"amount": 2
				},
				{
					"type": "origins:play_sound",
					"sound": "minecraft:entity.parrot.fly",
					"pitch": 0.5,
					"volume": 1
				}
			]
		},
		"condition": {
			"type": "origins:and",
			"conditions": [
				{
					"type": "origins:fall_flying"
				},
                {
                    "type": "origins:food_level",
                    "comparison": ">=",
                    "compare_to": 8
                }
			]
		},
		"cooldown": 100,
		"key": {
			"key": "key.jump",
			"continuous": false
		},
        "hud_render": {
			"sprite_location": "origins:textures/gui/community/huang/resource_bar_01.png",
			"bar_index": 3
		}
	},

	"badges": [
		{
			"type": "origins:tooltip",
			"sprite": "origins:textures/gui/badge/star.png",
			"text": "§2[+] Elytra Flight\n[+] Boost Ability during flight\n§c[-] You can't use rockets\n[-] Flying exhausts you\n[-] Can't use boost while having less than 4 hunger bars"
		},
		{
			"type": "origins:keybind",
			"sprite": "origins:textures/gui/badge/active.png",
			"text": "Use [§2Space§f] while flying to boost yourself.\n§c[-] Boosting yourself will exhaust you"
		}
	],
	"name": "§f[§2+§f] §2King of the Skies",
	"description": "You were born with wings and know how to use them. You are able to traverse the skies without a problem, and you can use the power of your wings to accelerate in the direction you want. Just... watch out for obstacles."
}
